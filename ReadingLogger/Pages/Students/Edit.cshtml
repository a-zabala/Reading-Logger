@page "{id:int}"
@model ReadingLogger.Pages.Students.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.ID" />
            <div class="form-group">
                <label asp-for="Student.FirstName" class="control-label"></label>
                <input asp-for="Student.FirstName" class="form-control" />
                <span asp-validation-for="Student.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.LastName" class="control-label"></label>
                <input asp-for="Student.LastName" class="form-control" />
                <span asp-validation-for="Student.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Teacher" class="control-label"></label>
                <input asp-for="Student.Teacher" class="form-control" />
                <span asp-validation-for="Student.Teacher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.CurrentBook" class="control-label"></label>
                <input asp-for="Student.CurrentBook" class="form-control" />
                <span asp-validation-for="Student.CurrentBook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Section" class="control-label"></label>
                <input asp-for="Student.Section" class="form-control" />
                <span asp-validation-for="Student.Section" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
