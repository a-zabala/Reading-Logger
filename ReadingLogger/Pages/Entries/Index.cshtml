@page  "{id:int?}"
@model ReadingLogger.Pages.Entries.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Reading Log Entries</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].Minutes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].Pages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].LogDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Entry)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Minutes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pages)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LogDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FirstName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.EntryID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.EntryID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.EntryID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
