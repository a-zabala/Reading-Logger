            </div>
            <div class="form-group">
                <label asp-for="Entry.Minutes" class="control-label"></label>
                <input asp-for="Entry.Minutes" class="form-control" />
                <span asp-validation-for="Entry.Minutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entry.Pages" class="control-label"></label>
                <input asp-for="Entry.Pages" class="form-control" />
                <span asp-validation-for="Entry.Pages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entry.LogDate" class="control-label"></label>
                <input asp-for="Entry.LogDate" class="form-control" />
                <span asp-validation-for="Entry.LogDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

